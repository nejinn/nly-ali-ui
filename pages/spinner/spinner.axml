  <view style='padding:20rpx 20rpx; background-color:#f7f8fa'>
    <text>自定义大小 </text>
  </view>
  <nly-spinner color="#1989fa" size='50' />
  <nly-spinner type='spinner' color="#1989fa" size='60' />

  <view style='padding:20rpx 20rpx; background-color:#f7f8fa'>
    <text>自定义文本 </text>
  </view>
