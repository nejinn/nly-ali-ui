<block a:if="{{!title}}">
<view class="nly-badge__wrapper{{className?` ${className}`:''}} style={{style}}">
  <slot />
  <view
    class="nly-badge{{dot?' nly-badge--dot':''}} nly-badge--fixed"
    style="{{color?`background: ${color}`:''}}"
  >
    {{convertContent}}
    <slot name='content'>
  </view>
</view>
</block>
<block a:if="{{title}}">
  <view class="nly-badge {{className?` ${className}`:''}} style={{style}}">
    {{convertTitle}}
    <slot name='title'>
  </view>
</block>